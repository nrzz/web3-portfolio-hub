# Build Information
BUILD_VERSION=1.0.0

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# Security
BCRYPT_COST=12
TOKEN_EXPIRY_HOURS=24

# Monitoring
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_ENABLED=true 